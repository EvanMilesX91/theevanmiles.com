# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com → Your Project → Settings → API

# Your Supabase project URL (looks like: https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=XXX

# Supabase anon/public key (starts with: eyJhbGc...)
NEXT_PUBLIC_SUPABASE_ANON_KEY=XXX
# Supabase service role key (starts with: eyJhbGc... - KEEP THIS SECRET!)
SUPABASE_SERVICE_ROLE_KEY=XXX

# ============================================
# SPOTIFY CONFIGURATION
# ============================================
# Get these from: https://developer.spotify.com/dashboard → Your App → Settings

# Your Spotify app Client ID
SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID_HERE

# Your Spotify app Client Secret
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET_HERE

# Redirect URI for local development (leave this as-is for now)
NEXT_PUBLIC_SPOTIFY_REDIRECT_URI=http://localhost:3000/api/presave/spotify/callback


# ============================================
# EMAIL CONFIGURATION (RESEND)
# ============================================
# Get this from: https://resend.com → API Keys

# Your Resend API key (starts with: re_...)
RESEND_API_KEY=XXX

# Email address to send FROM (use noreply@ or info@)
RESEND_FROM_EMAIL=XXX


# ============================================
# ADMIN PANEL
# ============================================
# Password to access /admin (CHANGE THIS TO SOMETHING SECURE!)
ADMIN_PASSWORD=XXX


# ============================================
# SITE CONFIGURATION
# ============================================
# Your site URL (for local development, leave as-is)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Cron job secret (make up a random string)
CRON_SECRET=XXX